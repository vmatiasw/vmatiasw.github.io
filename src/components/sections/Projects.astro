---
import { Icon } from "astro-icon/components";
import ItemSkills from "../ItemSkills.astro";
import { CV } from "../../CVRepository";
import { Image } from "astro:assets";
import { getFilterClassNames } from "@/skill-filter";
import TextList from "../TextList.astro";

const { projects, projectsSkills } = CV;
---

<section class={Astro.props.className}>
  <h3 class="section-title1">Projects</h3>
  <div class=`grid md:grid-cols-2 ${getFilterClassNames(projectsSkills)}`>
    {
      projects.map(
        ({
          url,
          description,
          highlights,
          name,
          isActive,
          github,
          image,
          skills,
        }) => {
          return (
            <div class={`muted-box ${getFilterClassNames(skills)} `}>
              <div class="flex justify-between">
                <div class="flex items-center gap-2">
                  <Icon name="mdi:folder-outline" class="size-4" />
                  {isActive ? (
                    <a
                      class="group flex items-center gap-[6px] text-lg hover:text-skin-hue hover:underline"
                      href={url}
                      title={`View ${name}`}
                      target="_blank"
                    >
                      {name}
                      <Icon
                        name="ri:arrow-up-line"
                        class="rotate-45 text-skin-hue group-hover:-translate-y-0.5 group-hover:translate-x-0.5"
                      />
                    </a>
                  ) : (
                    <span>{name}</span>
                  )}
                </div>
                {github && (
                  <a
                    href={github}
                    title="View slug repository on GitHub"
                    target="_blank"
                    rel="noopener"
                    class="opacity-75 hover:scale-125 hover:opacity-100"
                  >
                    <Icon name="mdi:github" class="size-6" />
                  </a>
                )}
              </div>
              <p class="py-3">{description}</p>
              {highlights && <TextList items={highlights} ulClass="text-sm" />}
              {image && (
                <a data-src={image} data-fancybox="projects">
                  <Image
                    src={image}
                    alt=""
                    width={800}
                    height={1080}
                    class="mt-3 max-w-full rounded-lg"
                  />
                </a>
              )}
              <ItemSkills skills={skills} />
            </div>
          );
        },
      )
    }
  </div>
</section>

<script>
  import { Fancybox } from "@fancyapps/ui";
  Fancybox.bind('[data-fancybox="projects"]', { hideScrollbar: false });
</script>
