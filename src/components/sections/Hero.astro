---
import type { Profile } from "@/cv-types";
import { CV } from "@/CVRepository";
import ThemeSwitchBtn from "@/components/buttons/ThemeSwitchBtn.astro";
import PrintBtn from "@/components/buttons/PrintBtn.astro";
import HighlightSkillsBtn from "@/components/buttons/HighlightSkillsBtn.astro";
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";

const { name, label, image, location, profiles, email, website } = CV.basics;
const { city, region } = location;

const InfoItems = [
  { icon: "mdi:world", text: `${city}, ${region}` },
  { icon: "mdi:email", text: email },
  { icon: "mdi:web", text: website.url, className: "not-print:hidden" },
];

interface BtnItem extends Profile {
  message?: string;
}

const btnItems: BtnItem[] = [
  {
    network: "email",
    icon: "mdi:email",
    message: "Send email to me",
    url: `mailto:${email}`,
  },
  ...profiles,
];
---

<section class={`gap-2 ${Astro.props.class}`}>
  <figure class="relative mb-6 w-fit">
    <Image
      class="rounded-3xl"
      loading="eager"
      height={200}
      width={200}
      src={image}
      alt={name}
    />
    <div class="absolute -inset-3">
      <div class="gradient-y-mask right-0"></div>
      <div class="gradient-y-mask left-0"></div>
      <div class="gradient-x-mask bottom-0"></div>
      <div class="gradient-x-mask top-0"></div>
    </div>
  </figure>
  <div class="flex flex-col gap-1">
    <h1 class="font-bold">{name}</h1>
    <h5 class="text-skin-secondary">{label}</h5>
    {
      InfoItems.map(({ icon, text, className }) => {
        return (
          <div
            class={`inline-flex items-center gap-2 text-skin-secondary ${className}`}
          >
            <Icon name={icon} class="size-5" />
            <p>{text}</p>
          </div>
        );
      })
    }
  </div>
  <div class="flex gap-1 print:hidden">
    {
      btnItems.map(({ network, url, icon, message }) => {
        const defaultMessage = `Visit ${network} profile`;
        return (
          <a
            class="hero-button"
            href={url}
            title={message || defaultMessage}
            aria-label={message || defaultMessage}
            target="_blank"
            rel="noopener noreferrer"
          >
            <Icon name={icon} class="size-5" />
          </a>
        );
      })
    }
    <PrintBtn class="hero-button" />
    <HighlightSkillsBtn class="hero-button" />
    <ThemeSwitchBtn class="hero-button" />
  </div>
</section>

<style>
  .gradient-y-mask {
    @apply absolute -inset-y-10 w-[2px] bg-skin-accent/50 [mask-image:linear-gradient(to_top,transparent,white_5rem,white_calc(100%-5rem),transparent)];
  }
  .gradient-x-mask {
    @apply absolute -inset-x-10 h-[2px] bg-skin-accent/50 [mask-image:linear-gradient(to_left,transparent,white_5rem,white_calc(100%-5rem),transparent)];
  }
</style>

<style is:global>
  .hero-button {
    @apply inline-flex size-8 cursor-pointer items-center justify-center rounded-md text-skin-interactive transition-all duration-500 hover:bg-skin-interactive/20;
  }
</style>
