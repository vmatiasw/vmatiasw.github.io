---
import { CV } from "../../CVRepository";
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import ThemeSwitchBtn from "@/components/ThemeSwitchBtn.astro";
import PrintBtn from "../PrintBtn.astro";

const { name, label, image, location, profiles, email, website } = CV.basics;
const { city, region } = location;
---

<section class={Astro.props.class}>
  <div class="flex flex-col-reverse gap-8">
    <div class="flex flex-col gap-1">
      <h1 class="text-3xl font-bold">{name}</h1>
      <h2 class="text-skin-muted">{label}</h2>
      <div class="inline-flex items-center gap-2 text-skin-muted">
        <Icon name="mdi:world" class="size-5" />
        <p>{city}, {region}</p>
      </div>
      <div class="inline-flex items-center gap-2 text-skin-muted">
        <Icon name="mdi:email" class="size-5" />
        <p>{email}</p>
      </div>
      <div
        class="inline-flex items-center gap-2 text-skin-muted not-print:hidden"
      >
        <Icon name="mdi:web" class="size-5" />
        <p>{website}</p>
      </div>
      <div class="print:hidden">
        <a
          class="button-hover-effect size-8"
          href={`mailto:${email}`}
          title={`Send email to me`}
          target="_blank"
          rel="noopener noreferrer"
        >
          <Icon name="mdi:email" class="size-5" />
        </a>
        {
          profiles.map(({ network, url, icon }) => {
            return (
              <a
                class="button-hover-effect size-8"
                href={url}
                title={`Visit ${name} profile on ${network}`}
                target="_blank"
                rel="noopener noreferrer"
              >
                <Icon name={icon} class="size-5" />
              </a>
            );
          })
        }
        <PrintBtn class="button-hover-effect size-8" />
        <ThemeSwitchBtn class="button-hover-effect size-8" />
      </div>
    </div>
    <figure class="relative w-fit">
      <Image
        class="rounded-3xl"
        height={200}
        width={200}
        src={image}
        alt={name}
      />
      <div class="absolute -inset-3">
        <div class="gradient-y-mask right-0"></div>
        <div class="gradient-y-mask left-0"></div>
        <div class="gradient-x-mask bottom-0"></div>
        <div class="gradient-x-mask top-0"></div>
      </div>
    </figure>
  </div>
</section>

<style>
  .gradient-y-mask {
    @apply absolute -inset-y-10 w-[2px] bg-skin-hue/50 [mask-image:linear-gradient(to_top,transparent,white_5rem,white_calc(100%-5rem),transparent)];
  }
  .gradient-x-mask {
    @apply absolute -inset-x-10 h-[2px] bg-skin-hue/50 [mask-image:linear-gradient(to_left,transparent,white_5rem,white_calc(100%-5rem),transparent)];
  }
</style>
