---
import AcordionSection from "../AcordionSection.astro";
import { skills } from "@cv";
import { Icon } from "astro-icon/components";
---

<AcordionSection className={Astro.props.className} title="Skills">
  <ul
    class="inline-flex flex-wrap gap-4 print:mt-4 [&>li>svg]:text-skin-hue [&>li]:text-sm"
  >
    {
      skills.map(({ name, icon }) => {
        return (
          <li class="flex items-center gap-1 rounded-md border border-solid border-skin-hue/20 bg-skin-button-accent/20 px-1 py-0.5 text-xs text-skin-hue print:border-none print:bg-transparent print:p-0 print:text-zinc-800">
            {icon && <Icon name={icon} width={16} height={16} />}{" "}
            <span>{name}</span>
          </li>
        );
      })
    }
  </ul>
</AcordionSection>
