---
import { CV } from "@/CVMapper";
import TimelineCard from "@/components/base/cards/TimelineCard.astro";

const { education } = CV;
---

<section class={Astro.props.class}>
  <h2>Education</h2>
  <ul class="md:card-box grid gap-4 md:gap-0">
    {
      education.map(
        ({
          institution,
          startDate,
          endDate,
          area,
          url,
          skills,
          summary,
          body,
          details,
        }) => {
          return (
            <li>
              <TimelineCard
                body={body}
                startDate={startDate}
                endDate={endDate}
                firstTitle={area}
                entityUrl={url}
                entityTitle={institution}
                skills={skills}
                summary={summary}
                details={details}
              />
            </li>
          );
        },
      )
    }
  </ul>
</section>
