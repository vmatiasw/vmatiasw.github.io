---
import ArtPlums from "@/components/ArtPlums.astro";
import "../globals.css";
import { CV } from "../CVRepository";

interface Props {
  title: string;
}

const { title } = Astro.props;

const { image, summary } = CV.basics;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="description" content={summary} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/avatar.png" />
    <link rel="preload" as="image" href={image} />
  </head>
  <body class="bg-skin-fill"> 
    <ArtPlums class="background-fixed"/>
    <slot />
  </body>
</html>

<style>
  body {
    background-attachment: fixed;
    margin: 0;
  }

  .background-fixed {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
  }
</style>
